# ---------------- Dockerfile-api-dev ----------------
# ---------- build ----------
FROM gradle:8.8-jdk17 AS builder
WORKDIR /usr/src/app
COPY . .
RUN chmod +x ./gradlew && ./gradlew :api-server:bootJar -x test

# ---------- runtime ----------
FROM openjdk:17-jdk-alpine
WORKDIR /app
COPY --from=builder /usr/src/app/api-server/build/libs/api-server.jar /app/
COPY --from=builder /usr/src/app/api-server/src/main/resources/application-dev.yml /app/
COPY --from=builder /usr/src/app/api-server/src/main/resources/firebase/napzak-firebase-adminsdk.json /app/firebase/
ENTRYPOINT ["java","-jar","/app/api-server.jar","--spring.profiles.active=dev"]
