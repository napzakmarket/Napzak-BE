# ---------------- Dockerfile-chat-prod ----------------
# ---------- build ----------
FROM gradle:8.8-jdk17 AS builder
WORKDIR /usr/src/app
COPY . .
RUN chmod +x ./gradlew && ./gradlew :chat-server:bootJar -x test

# ---------- runtime ----------
FROM openjdk:17-jdk-alpine

# ✅ tzdata 설치 (JVM + OS에 Asia/Seoul 반영 위해 필요)
RUN apk add --no-cache tzdata

# ✅ JVM과 OS 모두 KST로 강제 설정
ENV TZ=Asia/Seoul
ENV JAVA_TOOL_OPTIONS="-Duser.timezone=Asia/Seoul"

# ✅ 작업 디렉토리 설정
WORKDIR /app

# ✅ CI에서 주입된 파일 COPY
COPY chat-server/src/main/resources/application-chat-prod.yml /app/
COPY chat-server/src/main/resources/firebase/napzak-firebase-adminsdk.json /app/firebase/

# ✅ JAR 파일은 builder에서 복사
COPY --from=builder /usr/src/app/chat-server/build/libs/chat-server.jar /app/

ENTRYPOINT ["java", "-jar", "/app/chat-server.jar", "--spring.profiles.active=prod"]
